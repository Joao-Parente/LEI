<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<!-- Form -->
	<record id="view_form_aluno" model="ir.ui.view">
		<field name="name">Aluno Form</field>
		<field name="model">transum.aluno</field>
		<field name="arch" type="xml">
			<form>
				<sheet>
					<group name="group_top">
						<notebook>
							<page string="Perfil">
								<group>
									<group>
										<field name="nr_mecanografico" />
										<field name="nome" />
										<field name="email" />
										<field name="estado" readonly="1"/>
										<field name="ano" />
										<field name="estatuto" />
										<field name="proposta_plano_aluno" attrs="{'invisible':[('proposta_plano_aluno','=',False)]}" readonly="1"/>
									</group>
									<group>
										<field name="curso_id" string="Curso"/>
									</group>
								</group>
							</page>
							<page string="Planos de Estudos" attrs="{'invisible':[('planos_atuais','=',[])]}">
								<group>
									<field name="planos_atuais" readonly="1" />
									<field name="plano_historico" attrs="{'invisible':[('plano_historico','=',[])]}" readonly="1"/>
								</group>
							</page>
						</notebook>
					</group>
				</sheet>
			</form>
		</field>
	</record>
	<!-- Tree -->
	<record id="view_tree_aluno" model="ir.ui.view">
		<field name="name">Lista de Alunos</field>
		<field name="model">transum.aluno</field>
		<field name="arch" type="xml">
			<tree default_order="nr_mecanografico">
				<field name="nr_mecanografico" />
				<field name="nome"/>
				<field name="ano"/>
				<field name="curso_id" widget="many2many_tags"/>
			</tree>
		</field>
	</record>
	<!-- Search -->
	<record id="view_search_aluno" model="ir.ui.view">
		<field name="name">Filtros do Aluno</field>
		<field name="model">transum.aluno</field>
		<field name="arch" type="xml">
			<search>
				<field name="nr_mecanografico" string="Nº Mecanográfico" filter_domain="[('nr_mecanografico','ilike',self)]"/>
				<field name="nome" string="Nome" filter_domain="[('nome','ilike',self)]"/>
				<field name="ano" string="Ano" filter_domain="[('ano','ilike',self)]"/>
				<field name="curso_id" string="Curso" filter_domain="[('curso_id','ilike',self)]"/>
			</search>
		</field>
	</record>
</odoo>