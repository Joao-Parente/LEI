<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<!-- Form -->
	<record id="view_form_docente" model="ir.ui.view">
		<field name="name">Docente Form</field>
		<field name="model">transum.docente</field>
		<field name="arch" type="xml">
			<form>
				<header></header>
				<sheet>
					<group name="group_top">
						<group>
							<group>
								<field name="nr_mecanografico" />
								<field name="email" />
								<field name="nome" />
								<field name="record_file" /> 
							</group>
							<group>
								<field name="direcoes_curso" attrs="{'invisible':[('direcoes_curso','=',[])]}" readonly="1" />
							</group>
						</group>
					</group>
				</sheet>
			</form>
		</field>
	</record>
	<!-- Tree -->
	<record id="view_tree_docente" model="ir.ui.view">
		<field name="name">Lista de Docentes</field>
		<field name="model">transum.docente</field>
		<field name="arch" type="xml">
			<tree>
				<field name="nr_mecanografico" />
				<field name="email" />
				<field name="nome" />
			</tree>
		</field>
	</record>
	<!-- Search -->
	<record id="view_search_docente" model="ir.ui.view">
		<field name="name">Filtros do Docente</field>
		<field name="model">transum.docente</field>
		<field name="arch" type="xml">
			<search>
				<field name="nr_mecanografico" string="Nº Mecanográfico" filter_domain="[('nr_mecanografico','ilike',self)]" />
				<field name="email" string="Email" filter_domain="[('email','ilike',self)]" />
				<field name="nome" string="Nome" filter_domain="[('nome','ilike',self)]" />
			</search>
		</field>
	</record>
</odoo>