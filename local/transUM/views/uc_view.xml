<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="view_form_uc" model="ir.ui.view">
		<field name="name">UC Form</field>
		<field name="model">transum.uc</field>
		<field name="arch" type="xml">
			<form>
				<header>
					<!-- Buttons will go here -->
					<!--<button name="button_check_isbn" type="object"
						string="Check ISBN" /> -->
				</header>
				<sheet>
					<!-- Content goes here: -->
					<group name="group_top">
						<field name="codigo" />
						<field name="designacao" />
						<field name="ects" />
						<field name="obrigatoria" />
                        <field name="tem_opcao" />
						<field name="active" />
                        <field name="ano" />
                        <field name="semestre" />
                        <field name="uc_opcao" attrs="{'invisible':[('obrigatoria','=',True)]}"/>
                        <field name="uc_principal" attrs="{'invisible':[('tem_opcao','=',False)]}"/>
						<field name="plano_curso" widget='many2many'/>
					</group>
				</sheet>
			</form>
		</field>
	</record>
	<record id="view_tree_uc" model="ir.ui.view">
		<field name="name">Lista de UCs</field>
		<field name="model">transum.uc</field>
		<field name="arch" type="xml">
			<tree>
				<field name="codigo"/>
				<field name="designacao" />
                <field name="ano" />   
                <field name="semestre" />    
                <field name="ects" />        
			</tree>
		</field>
	</record>	
	<record id="view_search_uc" model="ir.ui.view">
		<field name="name">Filtros da UC</field>
		<field name="model">transum.uc</field>
		<field name="arch" type="xml">
			<search>
              <field name="codigo" string="Código"
                  filter_domain="[('codigo','ilike',self)]"/>
              <field name="designacao" string="Designação"
                  filter_domain="[('designacao','ilike',self)]"/>
            </search>
		</field>
	</record>
</odoo>
